<?xml version="1.0" encoding="UTF-8"?>
<project-shared-configuration>
    <!--
This file contains additional configuration written by modules in the NetBeans IDE.
The configuration is intended to be shared among all the users of project and
therefore it is assumed to be part of version control checkout.
Without this configuration present, some functionality in the IDE may be limited or fail altogether.
-->
    <python-data xmlns="http://nbpython.dev.java.net/ns/php-project/1">
        <main.file>home_smart/home_smart.py</main.file>
        <platform.active>Python_3.6.3</platform.active>
    </python-data>
    <preferences xmlns="http://www.netbeans.org/ns/auxiliary-configuration-preferences/1">
        <module name="org-netbeans-modules-html-editor-lib"/>
        <module name="org-netbeans-modules-editor-indent">
            <node name="text">
                <node name="x-python">
                    <node name="CodeStyle">
                        <node name="project"/>
                    </node>
                </node>
            </node>
            <node name="CodeStyle">
                <node name="project">
                    <property name="text-line-wrap" value="words"/>
                    <property name="indent-shift-width" value="4"/>
                    <property name="spaces-per-tab" value="4"/>
                    <property name="tab-size" value="4"/>
                    <property name="text-limit-width" value="80"/>
                    <property name="expand-tabs" value="false"/>
                </node>
                <property name="usedProfile" value="project"/>
            </node>
        </module>
    </preferences>
</project-shared-configuration>
